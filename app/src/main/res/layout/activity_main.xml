<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- 主内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <!-- 顶部区域：当前文件+更多按钮 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_current_file"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="#E3F2FD"
                    android:text="当前编辑：无文件（请创建或导入）"
                    android:textSize="14sp"
                    android:textColor="#0D47A1"
                    android:layout_marginEnd="50dp"/>

                <ImageButton
                    android:id="@+id/btn_more"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_menu_moreoverflow"
                    android:background="@android:color/transparent"
                    android:contentDescription="更多操作"/>

            </RelativeLayout>

            <!-- 平面图显示容器 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="300dp"
                android:background="#E0E0E0"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="#f0f0f0"
                    android:scaleType="fitXY"
                    android:contentDescription="地图图片"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="#F5F5F5"
                    android:gravity="center_vertical">
                </LinearLayout>

            </LinearLayout>

            <!-- 点位类型选择 -->
            <RadioGroup
                android:id="@+id/rgPointType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:background="#F5F5F5"
                android:padding="8dp">

                <RadioButton
                    android:id="@+id/rbSpecialPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="特殊点"
                    android:textSize="15sp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rbNormalPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="普通点"
                    android:textSize="15sp"
                    android:layout_marginStart="16dp"/>

            </RadioGroup>

            <!-- XY坐标+楼层+区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/etPixelX"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="X坐标"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="8dp"
                    android:background="#EEEEEE"
                    android:textColor="#000000"
                    android:textColorHint="#616161"
                    android:layout_marginEnd="4dp"/>

                <EditText
                    android:id="@+id/etPixelY"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Y坐标"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="8dp"
                    android:background="#EEEEEE"
                    android:textColor="#000000"
                    android:textColorHint="#616161"
                    android:layout_marginHorizontal="4dp"/>

                <Spinner
                    android:id="@+id/spinnerFloor"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:prompt="@string/floor_prompt"
                    android:background="#EEEEEE"
                    android:paddingHorizontal="8dp"
                    android:spinnerMode="dropdown"
                    android:popupBackground="#FFFFFF"
                    android:layout_marginHorizontal="4dp"/>

                <Spinner
                    android:id="@+id/spinnerZone"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:prompt="@string/zone_prompt"
                    android:background="#EEEEEE"
                    android:paddingHorizontal="8dp"
                    android:spinnerMode="dropdown"
                    android:popupBackground="#FFFFFF"
                    android:layout_marginStart="4dp"/>

            </LinearLayout>

            <!-- 特殊点名称输入框 -->
            <EditText
                android:id="@+id/etLabel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="特殊点名称（如：图书馆入口）"
                android:paddingHorizontal="10dp"
                android:background="#EEEEEE"
                android:textColor="#000000"
                android:textColorHint="#616161"
                android:layout_marginBottom="4dp"/>

            <!-- 普通点距离输入框 -->
            <EditText
                android:id="@+id/etPath"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="普通点距离（如：距离图书馆入口5米）"
                android:paddingHorizontal="10dp"
                android:background="#EEEEEE"
                android:textColor="#000000"
                android:textColorHint="#616161"
                android:visibility="gone"
                android:layout_marginBottom="8dp"/>

            <!-- 核心操作按钮（3个一排） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <Button
                    android:id="@+id/btnImportImage"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF"
                    android:text="上传平面图"
                    android:textSize="13sp"
                    android:layout_marginEnd="2dp"/>

                <Button
                    android:id="@+id/btnRealTimeLocate"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF"
                    android:text="实时定位"
                    android:textSize="13sp"
                    android:layout_marginHorizontal="2dp"/>

                <Button
                    android:id="@+id/scanButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF"
                    android:text="扫描WiFi"
                    android:textSize="13sp"
                    android:layout_marginStart="2dp"/>

                <Button
                    android:id="@+id/btnShowAllMarkers"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF"
                    android:text="查看坐标"
                    android:textSize="13sp"
                    android:layout_marginEnd="2dp"/>

            </LinearLayout>

            <!-- 功能按钮（4个一排） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnSelectWifi"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF"
                    android:text="选WiFi(≥3)"
                    android:textSize="13sp"
                    android:layout_marginHorizontal="2dp"/>

                <Button
                    android:id="@+id/btnOneClickSave"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF"
                    android:text="保存指纹"
                    android:textSize="13sp"
                    android:layout_marginHorizontal="2dp"/>

                <Button
                    android:id="@+id/btnManageFingerprints"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF"
                    android:text="管理指纹库"
                    android:textSize="13sp"
                    android:layout_marginStart="2dp"/>

            </LinearLayout>

            <!-- 导出按钮（单独一行，保持原有visibility） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnExport"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    android:text="导出数据"
                    android:textSize="13sp"/>

            </LinearLayout>

            <!-- 权限提示文本 -->
            <TextView
                android:id="@+id/tvPermissionTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ 请授予位置/存储权限以正常使用功能"
                android:textSize="14sp"
                android:textColor="#F44336"
                android:visibility="gone"
                android:layout_marginBottom="4dp"/>

            <!-- 操作结果标题 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="操作结果"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginBottom="6dp"/>

            <!-- 操作结果显示区 -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:scrollbars="vertical"
                android:padding="2dp">

                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="操作结果将在这里显示"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textColor="#212121"
                    android:lineSpacingExtra="2dp"/>

            </ScrollView>

        </LinearLayout>

    </ScrollView>

    <!-- 侧边栏 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_file_operations"/>

</androidx.drawerlayout.widget.DrawerLayout>