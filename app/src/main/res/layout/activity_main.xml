<?xml version="1.0" encoding="utf-8"?>
<!-- 根布局：DrawerLayout -->
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- 1. 主内容区域（ScrollView包裹原有布局） -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:background="#FFFFFF">

        <!-- ScrollView的唯一直接子元素：LinearLayout -->
        <LinearLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <!-- 平面图显示区 -->
            <TextView
                android:id="@+id/tv_current_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#E3F2FD"
                android:text="当前编辑：无文件（请创建或导入）"
                android:textSize="14sp"
                android:textColor="#0D47A1"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnOpenDrawer"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="文件管理"
                android:textSize="14sp"
                android:backgroundTint="#1565C0"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="300dp"
                android:background="#E0E0E0"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:contentDescription="校园平面图显示区域"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:padding="2dp"/>

                <!-- 网格控制条 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="#F5F5F5"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/cbShowGrid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="显示网格"
                        android:textSize="14sp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="网格大小："
                        android:textSize="14sp"/>

                    <SeekBar
                        android:id="@+id/sbGridSize"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:layout_marginHorizontal="8dp"/>

                    <TextView
                        android:id="@+id/tvGridSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50px"
                        android:textSize="14sp"
                        android:minWidth="40dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 点位类型选择 -->
            <RadioGroup
                android:id="@+id/rgPointType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:background="#F5F5F5"
                android:padding="8dp">

                <RadioButton
                    android:id="@+id/rbSpecialPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="特殊点"
                    android:textSize="15sp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rbNormalPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="普通点"
                    android:textSize="15sp"
                    android:layout_marginStart="16dp"/>
            </RadioGroup>

            <!-- XY坐标+楼层+区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/etPixelX"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="X坐标"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="8dp"
                    android:background="#EEEEEE"
                    android:textColor="#000000"
                    android:textColorHint="#616161"
                    android:layout_marginEnd="4dp"/>

                <EditText
                    android:id="@+id/etPixelY"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Y坐标"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="8dp"
                    android:background="#EEEEEE"
                    android:textColor="#000000"
                    android:textColorHint="#616161"
                    android:layout_marginHorizontal="4dp"/>

                <Spinner
                    android:id="@+id/spinnerFloor"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:prompt="@string/floor_prompt"
                    android:background="#EEEEEE"
                    android:paddingHorizontal="8dp"
                    android:spinnerMode="dropdown"
                    android:popupBackground="#FFFFFF"
                    android:layout_marginHorizontal="4dp"/>

                <Spinner
                    android:id="@+id/spinnerZone"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:prompt="@string/zone_prompt"
                    android:background="#EEEEEE"
                    android:paddingHorizontal="8dp"
                    android:spinnerMode="dropdown"
                    android:popupBackground="#FFFFFF"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- 特殊点/普通点输入框 -->
            <EditText
                android:id="@+id/etLabel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="特殊点名称（如：图书馆入口）"
                android:paddingHorizontal="10dp"
                android:background="#EEEEEE"
                android:textColor="#000000"
                android:textColorHint="#616161"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etPath"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="普通点距离（如：距离图书馆入口5米）"
                android:paddingHorizontal="10dp"
                android:background="#EEEEEE"
                android:textColor="#000000"
                android:textColorHint="#616161"
                android:visibility="gone"
                android:layout_marginBottom="8dp"/>

            <!-- 核心功能按钮区 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="核心操作"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginBottom="6dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <Button
                    android:id="@+id/btnImportImage"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF"
                    android:text="上传平面图"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnRealTimeLocate"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF"
                    android:text="实时定位"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/scanButton"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF"
                    android:text="扫描WiFi"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnShowAllMarkers"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF"
                    android:text="查看坐标"
                    android:layout_marginStart="4dp"/>

            </LinearLayout>

            <!-- 指纹管理按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/btnSelectWifi"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF"
                    android:text="选择WiFi(≥3个)"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnOneClickSave"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF"
                    android:text="保存指纹"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnManageFingerprints"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF"
                    android:text="管理指纹库"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnExport"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF"
                    android:text="导出数据"
                    android:layout_marginStart="4dp"/>

                <Button
                    android:id="@+id/btnUpdateCurrentFile"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:backgroundTint="#FF9800"
                    android:text="更新当前文件"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- 结果显示区 -->
            <TextView
                android:id="@+id/tvPermissionTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ 请授予位置/存储权限以正常使用功能"
                android:textSize="14sp"
                android:textColor="#F44336"
                android:visibility="gone"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="操作结果"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginBottom="6dp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="#F0F0F0"
                android:scrollbars="vertical"
                android:padding="2dp">

                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="操作结果将在这里显示"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textColor="#212121"
                    android:lineSpacingExtra="2dp"/>

            </ScrollView>

        </LinearLayout> <!-- 主内容的LinearLayout闭合 -->
    </ScrollView> <!-- 主内容的ScrollView闭合 -->

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_file_operations"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout> <!-- 根布局DrawerLayout闭合 -->